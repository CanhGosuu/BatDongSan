<!DOCTYPE html>
<html lang="en">
<head>
    <%-include("./layouts/head")%>
</head>

<body class="animsition">
    <div class="page-wrapper">
        <%-include("./layouts/menu")%>
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <%-include("./layouts/header")%>

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- DATA TABLE -->
                                <h3 class="title-5 m-b-35">Sales article management</h3>
                                <div class="table-data__tool">
                                        <div class="table-data__tool-left">
                                                <button class="au-btn-filter">
                                                    <% let day= new Date().toDateString() %>
                                                    <i class="zmdi zmdi-filter-list"></i>Today: <span>
                                                            <%=day  %>
                                                    </span></button>
                                            </div>
                                    <div class="table-data__tool-right">
                                        <a href="/api/sells/">
                                        <button class="au-btn au-btn-icon au-btn--green au-btn--small">
                                            <i class="zmdi zmdi-plus"></i>add item</button></a>
                                    </div>
                                </div>
                                <div class="table-responsive table-responsive-data2">
                                    <table class="table table-data2">
                                        <thead>
                                            <tr>
                                                
                                                <th>Người đăng</th>
                                                <th>Hình thức</th>
                                                <th>Giá</th>
                                                <th>From</th>
                                                <th>To</th>
                                                <th>Status</th>
                                                <th>CARD</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            
                                            <% if (locals.sells) for(let i=0;i < total; i++){ var sell = sells[i] %>
                                            <tr class="tr-shadow">
                                                
                                                <td><%= sell.user.name %></td>
                                                <% if(sell.hinhThuc==="sell"){ %>
                                                    <td class="desc">Bán</td>
                                                <% }else{ %>
                                                    <td class="desc">Cho thuê</td>
                                                    <% } %>  
                                                <td>
                                                    <span class="block-email"><%= sell.cost[0].gia %> <%= sell.cost[0].donVi %></span>
                                                </td>
                                                <td class="desc"><%= sell.timePost[0].fromPost.toDateString() %></td>
                                                <td class="desc"><%= sell.timePost[0].toPost.toDateString() %></td>
                                                <td>
                                                    <span class="status--process"><%= sell.state %></span>
                                                </td>
                                                <td class="desc"><%= sell.cardCash.menhGia %></td>
                                                <td>
                                                    <div class="table-data-feature">
                                                        <% if(sell.state==="NEW"){ %>
                                                            <form action="post/<%= sell.id %>" method="post">
                                                                <button class="item" type="submit" data-toggle="tooltip" data-placement="top" title="Post">
                                                                    <i class="zmdi zmdi-shield-check"></i>
                                                                </button>
                                                        </form>
                                                        <% }else if(sell.state==="STORAGE"){ %>
                                                            <form action="new/<%= sell.id %>" method="post">
                                                                <button class="item" type="submit" data-toggle="tooltip" data-placement="top" title="New">
                                                                    <i class="zmdi zmdi-chart-donut"></i>>
                                                                </button>
                                                        </form>
                                                            <form action="post/<%= sell.id %>" method="post">
                                                                <button class="item" type="submit" data-toggle="tooltip" data-placement="top" title="Post">
                                                                    <i class="zmdi zmdi-shield-check"></i>
                                                                </button>
                                                        </form>
                                                        
                                                        <% }else{ %>
                                                            <form action="storage/<%= sell.id %>" method="post">
                                                                <button class="item" type="submit" data-toggle="tooltip" data-placement="top" title="Storage">
                                                                    <i class="zmdi zmdi-archive"></i>
                                                                </button>
                                                        </form>
                                                        
                                                        <% } %>
                                                            <form action="delete/<%= sell.id %>" method="post">
                                                                    <button class="item" type="submit" data-toggle="tooltip" data-placement="top" title="Delete">
                                                                            <i class="zmdi zmdi-delete"></i>
                                                                    </button>
                                                            </form>
                                                        </div>
                                                </td>
                                            </tr>
                                            <tr class="spacer"></tr>
                                            <% } %>                                       
                                        </tbody>
                                    </table>
                                </div>
                                <!-- END DATA TABLE -->
                            </div>
                        </div>
                        
                        <%-include("./layouts/footer")%>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- Main JS-->
    <%-include("./layouts/javascript")%>
</div>
</body>

</html>
<!-- end document-->
