<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../../layouts/head")%>
  </head>

  <body>
    <div class="super_container">
      <%-include("../../layouts/header")%> <%-include("../../layouts/menu")%>
      <%-include("../../layouts/home")%> <%-include("../../layouts/searchFind")%>
      <main>
        <!-- Properties -->

        <div class="properties">
          <div class="container">
            <div class="row">
              <div class="col">
                <div class="section_title"><%= total %> Properties found</div>
                <div class="section_subtitle">Search your dream home</div>
              </div>
            </div>
            <div class="row properties_row">
                    <% if (locals.finds) for(let i=0;i<total; i++){ var find = finds[i] %>
                     
                        <!-- Property -->
                        <div class="col-xl-4 col-lg-6 property_col">
                          <div class="property">
                              <div class="property_image">
                                  <img src="images/property_4.jpg" alt="">
                                  <% if (find.hinhThuc==="rent"){ %>
                                  <div class="tag_offer property_tag"><a href="#">Muốn thuê</a></div>
                                  <% } else { %>
                                  <div class="tag_featured property_tag"><a href="#">Muốn mua</a></div>
                                  <% } %>
                                </div>
                            <div class="property_body text-center">
                              <div class="property_location">
                                <%= find.adress[0].thanhPho %>
                              </div>
                              <div class="property_title">
                                <a href="/api/sells/<%= find._id %>"><%= find.loai %></a>
                              </div>
                              <% if(find.cost[0].donVi==="Thỏa thuận") { %>
                              <div class="property_price">
                                Thỏa thuận
                              </div>
                              <% } else{ %>
                                <div class="property_price">
                                  </div>
                              <% } %>
                            </div>
                            <div
                              class="property_footer d-flex flex-row align-items-center justify-content-start text-center"
                            >
                              <div>
                                <div class="property_icon">
                                  <img src="images/icon_1.png" alt="" />
                                </div>
                                <span> Diện tích: <%= find.dienTich[0].fromDienTich %> - <%= find.dienTich[0].toDienTich %> m2</span>
                              </div>
                              <div>
                                <div class="property_icon">
                                  <img src="images/icon_2.png" alt="" />
                                </div>
                                <span> Giá: <%= find.cost[0].fromCost %> - <%= find.cost[0].toCost %> <%= find.cost[0].donVi %></span>
                              </div>
                            </div>
                          </div>
                        </div>
                    <% } %>
            </div>
        </div>
        <!-- Newsletter -->
      </main>
      <%-include("../../layouts/footer")%>
    </div>
    <%-include("../../layouts/javascript")%>
  </body>
</html>