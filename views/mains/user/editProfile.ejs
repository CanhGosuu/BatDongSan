<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../../layouts/head")%>
  </head>

  <body>
    <div class="super-container">
      <%-include("../../layouts/header")%> <%-include("../../layouts/home")%>
      <%-include("../../layouts/search")%>
      <div class="container">
        <div class="row">
          <div class="col-lg-3">
            <div class="sidebar_realtor_image">
              <img
                src="images/sidebar_realtor.jpg"
                width="300px"
                height="300px"
                alt=""
              />
            </div>
            <div class="sidebar_realtor_body text-center">
              <div class="sidebar_realtor_title"><a href="#"></a></div>
              <div class="sidebar_realtor_subtitle"></div>
            </div>
          </div>
          <div class="col-lg-9">
            <h2 class="text-center">Edit Profile</h2>
            <div class="panel panel-info">
              <form
                class="form"
                role="form"
                action=""
                autocomplete="off"
                id="formRegister"
                novalidate=""
                method="POST"
              >
                <div class="form-group">
                  <label for="uname1">Full name</label> <input type="text"
                  class="form-control form-control-lg" name="name" id="uname1"
                  value=<%= %> />
                  <div class="invalid-feedback">Oops, you missed this one.</div>
                </div>
                <div class="row">
                  <div class="form-group col-lg-8">
                    <label for="uname1">Birth Day</label>
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      name="name"
                      id="uname1"
                      required=""
                    />
                    <div class="invalid-feedback">
                      Oops, you missed this one.
                    </div>
                  </div>
                  <div class="form-group col-lg-4">
                    <label for="uname1">Gender</label>
                    <select class="form-control">
                      <option>Male</option>
                      <option>Female</option>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label for="uname1">Address</label>
                  <input
                    type="text"
                    class="form-control form-control-lg"
                    name="name"
                    id="uname1"
                    required=""
                  />
                  <div class="invalid-feedback">Oops, you missed this one.</div>
                </div>
                <div class="form-group py-4">
                  <button
                    class="btn btn-outline-secondary btn-lg"
                    data-dismiss="modal"
                    aria-hidden="true"
                  >
                    Cancel
                  </button>
                  <button
                    type="submit"
                    class="btn btn-success btn-lg float-right"
                    id="btnRegister"
                  >
                    Change
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%-include("../../layouts/footer")%>
  </body>
  <%-include("../../layouts/javascript")%>
</html>
