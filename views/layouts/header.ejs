<!-- Header -->

<header class="header">
  <div class="container">
    <div class="row"></div>>
      <div class="col">
        <div class="header_content d-flex flex-row align-items-center justify-content-start">
          <div class="logo">
            <a href="#"><img src="images/logo.png" alt=""></a>
          </div>
          <nav class="main_nav" style="width: 70%">
            <ul>
              <li><a href="#">Trang chủ</a></li>
              <li ><a href="#">Tòa nhà cho thuê</a></li>
              <li><a href="#">Toà nhà cho bán</a></li>
              <li><a href="#">Cẩm nang</a></li>
            
            </ul>
          </nav>
          <% if (true) { %>
          <div class="phone_num ml-auto">
            <div class="phone_num_inner">
              <a href="#loginModal" role="button" data-toggle="modal"><span>Login</span></a>
            </div>
          </div>
          <div class="phone_num ml-auto">
            <div class="phone_num_inner">
              <a href="#registerModal" role="button" data-toggle="modal"><span>Register</span></a>
            </div>
          </div>
          <% } else { %>
          <div class="phone_num ml-auto">
            <div class="phone_num_inner">
              <a href="#" role="button" data-toggle="modal"><span>Logout</span></a>
            </div>
          </div>
          <div class="phone_num ml-auto">
            <div class="phone_num_inner">
              <a href="#" role="button" data-toggle="modal"><span>Profile</span></a>
            </div>
          </div>
          <% } %>
          <div class="hamburger ml-auto"><i class="fa fa-bars" aria-hidden="true"></i></div>
        </div>
      </div>
    </div>
  </div>
</header>

