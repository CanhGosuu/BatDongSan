<!-- Header -->

<header class="header">
  <div class="container">
    <div class="row">
      <div class="col">
        <div
          class="header_content d-flex flex-row align-items-center justify-content-start"
        >
          <div class="logo">
            <a href="#"><img src="images/logo.png" alt=""/></a>
          </div>
          <nav class="main_nav">
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/api/sells/all">Bán/cho thuê</a></li>
              <li><a href="/api/finds/all">Cần mua/ thuê</a></li>
              <li>
                <div class="dropdown">
                  <button
                    class="btn btn-primary dropdown-toggle"
                    type="button"
                    id="dropdownMenuButton"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                  >
                    Đăng bài
                  </button>
                  <div
                    class="dropdown-menu"
                    aria-labelledby="dropdownMenuButton"
                  >
                    <a class="dropdown-item" href="/api/sells/"
                      >Bán nhà/ Cho thuê nhà</a
                    >
                    <a class="dropdown-item" href="/api/finds/"
                      >Mua nhà/ Thuê nhà</a
                    >
                  </div>
                </div>
              </li>
            </ul>
          </nav>
          <% if (true) { %>
          <div class="phone_num ml-auto">
            <div class="phone_num_inner">
              <a href="#loginModal" role="button" data-toggle="modal"
                ><span>Login</span></a
              >
            </div>
          </div>
          <div class="phone_num ml-auto">
            <div class="phone_num_inner">
              <a href="#registerModal" role="button" data-toggle="modal"
                ><span>Register</span></a
              >
            </div>
          </div>
          <% } else { %>
          <div class="phone_num ml-auto">
            <div class="phone_num_inner">
              <a href="#" role="button" data-toggle="modal"
                ><span>Profile</span></a
              >
            </div>
          </div>
          <div class="phone_num ml-auto">
            <div class="phone_num_inner">
              <a href="#" role="button" data-toggle="modal"
                ><span>Logout</span></a
              >
            </div>
          </div>

          <% } %>
          <div class="hamburger ml-auto">
            <i class="fa fa-bars" aria-hidden="true"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<%-include("../authentication/login")%>
<%-include("../authentication/register")%>

