<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("../layouts/head")%>
    <!-- Fontfaces CSS-->
    <link href="stylesheets/font-face.css" rel="stylesheet" media="all" />

    <!-- Bootstrap CSS-->
    <link
      href="stylesheets/vendor/bootstrap-4.1/bootstrap.min.css"
      rel="stylesheet"
      media="all"
    />

    <!-- Vendor CSS-->
    <link
      href="stylesheets/vendor/animsition/animsition.min.css"
      rel="stylesheet"
      media="all"
    />
    <link
      href="stylesheets/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css"
      rel="stylesheet"
      media="all"
    />
    <link
      href="stylesheets/vendor/wow/animate.css"
      rel="stylesheet"
      media="all"
    />
    <link
      href="stylesheets/vendor/css-hamburgers/hamburgers.min.css"
      rel="stylesheet"
      media="all"
    />
    <link
      href="stylesheets/vendor/slick/slick.css"
      rel="stylesheet"
      media="all"
    />
    <link
      href="stylesheets/vendor/select2/select2.min.css"
      rel="stylesheet"
      media="all"
    />
    <link
      href="stylesheets/vendor/perfect-scrollbar/perfect-scrollbar.css"
      rel="stylesheet"
      media="all"
    />

    <!-- Main CSS-->
    <link href="stylesheets/theme.css" rel="stylesheet" media="all" />
  </head>

  <body class="animsition">
    <div class="super_container">
      <%-include("../layouts/header")%> <%-include("../layouts/menu")%>
      <%-include("../layouts/home")%> <%-include("../layouts/searchSell")%>
      <main>
        <div class="page-wrapper">
          <div class="page-content">
            <div class="container">
              <div class="login-wrap">
                <div class="login-content">
                  <div class="login-logo"><h1>Đăng nhập</h1></div>
                  <div class="login-form">
                    <form method="post">
                      <div class="form-group">
                        <label>Email</label>
                        <input
                          class="au-input au-input--full"
                          type="email"
                          name="email"
                          value="<%=info.email%>"
                          placeholder="Email"
                        />
                      </div>
                      <div class="form-group">
                        <label>Mật khẩu</label>
                        <input
                          class="au-input au-input--full"
                          type="password"
                          name="password"
                          placeholder="Mật khẩu"
                        />
                      </div>
                      <p class="text-danger"><%=errors.incorrect%></p>
                      <div class="login-checkbox">
                        <label>
                          <input type="checkbox" name="remember" />Ghi nhớ đăng
                          nhập
                        </label>
                      </div>
                      <button
                        class="au-btn au-btn--block au-btn--green m-b-20"
                        type="submit"
                      >
                        Đăng nhập
                      </button>
                    </form>
                    <div class="register-link">
                      <p>
                        Bạn đã có tài khoản
                        <a href="/api/users/register">Đăng nhập tại đây</a>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Jquery JS-->
        <script src="stylesheets/vendor/jquery-3.2.1.min.js"></script>
        <!-- Bootstrap JS-->
        <script src="stylesheets/vendor/bootstrap-4.1/popper.min.js"></script>
        <script src="stylesheets/vendor/bootstrap-4.1/popper.min.js"></script>
        <script src="stylesheets/vendor/bootstrap-4.1/bootstrap.min.js"></script>
        <!-- Vendor JS       -->
        <script src="stylesheets/vendor/slick/slick.min.js"></script>
        <script src="stylesheets/vendor/wow/wow.min.js"></script>
        <script src="stylesheets/vendor/animsition/animsition.min.js"></script>
        <script src="stylesheets/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
        <script src="stylesheets/vendor/counter-up/jquery.waypoints.min.js"></script>
        <script src="stylesheets/vendor/counter-up/jquery.counterup.min.js"></script>
        <script src="stylesheets/vendor/circle-progress/circle-progress.min.js"></script>
        <script src="stylesheets/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
        <script src="stylesheets/vendor/chartjs/Chart.bundle.min.js"></script>
        <script src="stylesheets/vendor/select2/select2.min.js"></script>

        <!-- Main JS-->
        <script src="stylesheets/js/main.js"></script>
      </main>
      <%-include("../layouts/footer")%>
    </div>
    <%-include("../layouts/javascript")%>
  </body>
</html>
